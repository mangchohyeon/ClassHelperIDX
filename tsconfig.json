{
  "compilerOptions": {
    "jsx" : "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "noEmit" : true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl" : "src",
    "paths": {
      "@/*": ["*"],
      "@assets/*" : ["assets/*"],
      "@components/*": ["components/*"],
      "@fonts/*" :  ["fonts/*"],
      "@layout/*" : ["layout/*"], 
      "@pages/*": ["pages/*"],
      "@types/*": ["types/*"],
      "@utils/*" : ["utils/*"]
    }
  },
  "include" : [
    "src",
    "**/*.svg"
  ]
}